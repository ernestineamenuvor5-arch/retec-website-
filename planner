    <script>
        const apiKey = ""; // API Key handled by environment

        async function callGemini(prompt, systemPrompt) {
            const url = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-09-2025:generateContent?key=${apiKey}`;
            const payload = {
                contents: [{ parts: [{ text: prompt }] }],
                systemInstruction: { parts: [{ text: systemPrompt }] }
            };

            for (let i = 0; i < 5; i++) {
                try {
                    const response = await fetch(url, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(payload)
                    });
                    const data = await response.json();
                    return data.candidates?.[0]?.content?.parts?.[0]?.text;
                } catch (e) {
                    await new Promise(r => setTimeout(r, Math.pow(2, i) * 1000));
                }
            }
            return "Unable to connect. Please try again.";
        }

        async function runPathwayExplorer() {
            const career = document.getElementById('careerInput').value;
            if (!career) return;
            const loader = document.getElementById('pathwayLoader');
            const result = document.getElementById('pathwayResult');
            loader.classList.remove('hidden');
            result.classList.add('hidden');

            const system = "You are an expert on the Ghanaian GES JHS Curriculum and RETEC's 7-Layer Architecture. Explain how specific JHS subjects (like BDT, Science, Math) map to this requested career. Use bullet points. Keep it professional.";
            const prompt = `Map the career of '${career}' to the JHS curriculum in Ghana.`;
            
            const text = await callGemini(prompt, system);
            loader.classList.add('hidden');
            result.classList.remove('hidden');
            result.innerHTML = text.replace(/\n/g, '<br>').replace(/\*\*/g, '<b>').replace(/\*/g, '•');
        }

        async function runLessonCreator() {
            const topic = document.getElementById('topicInput').value;
            if (!topic) return;
            const loader = document.getElementById('lessonLoader');
            const result = document.getElementById('lessonResult');
            loader.classList.remove('hidden');
            result.classList.add('hidden');

            const system = "You are a RETEC Curriculum Designer. Take a standard Ghanaian JHS school topic and create one specific activity that links it to a modern, high-value career path. Identify the Career Cluster.";
            const prompt = `School Topic: ${topic}. Create a RETEC career-linked activity.`;
            
            const text = await callGemini(prompt, system);
            loader.classList.add('hidden');
            result.classList.remove('hidden');
            result.innerHTML = text.replace(/\n/g, '<br>').replace(/\*\*/g, '<b>').replace(/\*/g, '•');
        }

        async function runImpactForecaster() {
            const count = document.getElementById('studentCount').value;
            if (!count) return;
            const loader = document.getElementById('impactLoader');
            const result = document.getElementById('impactResult');
            loader.classList.remove('hidden');
            result.classList.add('hidden');

            const system = "Economic development strategist. Forecast the socio-economic impact and ROI for implementing the RETEC career-led system in Ghana for a given number of students over 10 years.";
            const prompt = `Impact of RETEC for ${count} JHS students in the Oti Region.`;
            
            const text = await callGemini(prompt, system);
            loader.classList.add('hidden');
            result.classList.remove('hidden');
            result.innerHTML = text.replace(/\n/g, '<br>').replace(/\*\*/g, '<b>').replace(/\*/g, '•');
        }

        // Hero Data Chart
        const ctx = document.getElementById('heroChart').getContext('2d');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Healthcare', 'Teaching', 'Security', 'Engineering', 'Tech/Coding'],
                datasets: [{
                    label: 'Aspiration Rate (%)',
                    data: [18, 15, 20, 4, 2.8],
                    backgroundColor: ['#10b981', '#10b981', '#10b981', '#3b82f6', '#3b82f6'],
                    borderRadius: 12,
                    borderSkipped: false
                }]
            },
            options: {
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false }
                },
                scales: {
                    y: { 
                        grid: { color: 'rgba(255,255,255,0.05)', drawBorder: false }, 
                        ticks: { color: '#64748b', font: { weight: 'bold' } }, 
                        beginAtZero: true 
                    },
                    x: { 
                        grid: { display: false },
                        ticks: { color: '#64748b', font: { weight: 'bold' } } 
                    }
                }
            }
        });
    </script>
</body>
